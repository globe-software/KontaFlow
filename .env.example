# ===================================
# DESARROLLO LOCAL (Docker)
# ===================================

# Backend
DATABASE_URL=postgresql://postgres:dev_password@postgres:5432/kontaflow_dev
PORT=8000
NODE_ENV=development

# Clerk (Auth) - Development Keys
CLERK_SECRET_KEY_DEV=sk_test_your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY_DEV=pk_test_your_clerk_publishable_key_here

# Resend (Email) - Development Key
RESEND_API_KEY_DEV=re_your_resend_api_key_here

# Redis
REDIS_URL=redis://redis:6379

# MinIO (S3 local)
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=kontaflow

# MailHog (Email testing local)
SMTP_HOST=mailhog
SMTP_PORT=1025

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here

