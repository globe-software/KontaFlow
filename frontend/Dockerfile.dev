FROM node:20-alpine

# Metadata
LABEL maintainer="KontaFlow Team"
LABEL description="KontaFlow Frontend - Next.js Development Environment"
LABEL version="1.0.0"
LABEL org.opencontainers.image.source="https://github.com/globe-software/kontaflow"
LABEL org.opencontainers.image.description="KontaFlow Frontend - Next.js Application"
LABEL org.opencontainers.image.vendor="Globe Software"
LABEL org.opencontainers.image.licenses="Proprietary"

WORKDIR /app

# Instalar libc6-compat para compatibilidad
RUN apk add --no-cache libc6-compat

# Copiar archivos de dependencias
COPY package*.json ./

# Instalar dependencias (usando install para desarrollo)
RUN npm install

# Exponer puerto
EXPOSE 3000

# Comando para desarrollo con hot reload
CMD ["npm", "run", "dev"]
