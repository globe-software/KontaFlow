FROM node:20-alpine

# Metadata
LABEL maintainer="KontaFlow Team"
LABEL description="KontaFlow Backend - Node.js Development Environment"
LABEL version="1.0.0"
LABEL org.opencontainers.image.source="https://github.com/globe-software/kontaflow"
LABEL org.opencontainers.image.description="KontaFlow Backend - Node.js Application"
LABEL org.opencontainers.image.vendor="Globe Software"
LABEL org.opencontainers.image.licenses="Proprietary"

WORKDIR /app

# Instalar dependencias del sistema necesarias para Prisma
RUN apk add --no-cache openssl libc6-compat

# Copiar archivos de dependencias
COPY package*.json ./

# Crear directorio prisma si no existe
RUN mkdir -p prisma

# Copiar schema de Prisma
COPY prisma ./prisma/

# Instalar dependencias (usando install para desarrollo)
RUN npm install

# Generar Prisma Client
RUN npx prisma generate

# Exponer puerto
EXPOSE 8000

# Comando para hot reload con tsx
CMD ["npm", "run", "dev"]
